@model UserVM

    <div class="men">
        <div class="container">
            <div class="col-md-12 register">
                <form asp-action="SignUp" asp-controller="ManageUsers" method="post">
                    <div class="register-top-grid">
                        <h3>PERSONAL INFORMATION</h3>
                        <div>
                            <span>First Name<label>*</label></span>
                            <input asp-for="FirstName" />
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div>
                            <span>Last Name<label>*</label></span>
                            <input asp-for="LastName" />
                            <span asp-validation-for="LastName"></span>
                        </div>
                        <div>
                            <span>Email Address<label>*</label></span>
                            <input asp-for="EmailID" />
                            <span asp-validation-for="EmailID"></span>
                        </div>
                        <div>
                            <span>Address<label>*</label></span>
                            <input asp-for="Address" />
                            <span asp-validation-for="Address"></span>
                        </div>
                        <div>
                            <span>Mobile No<label>*</label></span>
                            <input asp-for="MobileNo" />
                            <span asp-validation-for="MobileNo"></span>
                        </div>
                        <div>
                             &nbsp;
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="register-bottom-grid">
                        <h3>LOGIN INFORMATION</h3>
                        <div>
                            <span>Password<label>*</label></span>
                            <input asp-for="Password" />
                        </div>
                        <div>
                            <span>Confirm Password<label>*</label></span>
                            <input asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="clearfix"> </div>
                    <div>
                        <input type="submit" value="submit">
                        <div class="clearfix"> </div>
                    </div>
                </form>
            </div>
        </div>
    </div>